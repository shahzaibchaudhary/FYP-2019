@model MediKnock.Models.Client.UserProfileBE

@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_MainMaster.cshtml";
}

   <!-- Reset password -->
<section class="reset_password">


    <div class="container">
        <div class="row">
            <div class="span6 offset3">
                <form enctype="multipart/form-data" action="#" method="post">

                    @if (ViewBag.isexist == "yes")
                    {
                        <div class="box">
                            <div class="hgroup title">
                                <h3>Email sent successfully!</h3>
                                <h5>Your password at www.MediKnock.com is sent to your emaill.</h5>
                            </div>

                            <div class="buttons">
                                <a href="~/UserProfile/RegisterNLogin" class="btn btn-primary btn-small"> Login / Register </a>

                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="box">
                        <div class="hgroup title">
                            <h3>Forgotten your password?</h3>
                            <h5>Don't worry! Enter your email address below and we'll reset it for you.</h5>
                        </div>

                        <div class="box-content">

                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="email">Email</label>
                                        <div class="controls">
                                            @Html.TextBoxFor(x => x.UserProfileDetail.Email, new { @id = "Email", @validation = "validateEmail", @class = "span12" })

                                        </div>
                                    </div>
                                </div>

                                @if (ViewBag.isexist == "no")
                                {

                                <span style="color:red;">
                                    Email Not Exist,Please Create Account !
                                </span>
                                }

                            </div>
                        </div>

                        <div class="buttons">
                            <button class="btn btn-primary btn-small" type="submit" name="password_restore" value="Submit">
                                Reset my password
                            </button>
                        </div>
                    </div>
                    }

                    

                </form>
            </div>
        </div>
    </div>


</section>
<!-- End Reset password -->