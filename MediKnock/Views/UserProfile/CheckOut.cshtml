@model MediKnock.Models.Client.CheckOutBE

@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_MainMaster.cshtml";
}


<script src="~/Custom/js/JQueryForCustomPages.js"></script>

<script src="~/Custom/js/ProjectScript.js"></script>

<!-- Content section -->
<section class="main">

    <!-- Checkout / Billing Address -->
    <section class="checkout">


        <div class="container">
            @*<form enctype="multipart/form-data" action="shipping.html" method="post">*@
            @using (@Html.BeginForm("CheckOut", "UserProfile"))
            {
                @Html.HiddenFor(x => x.CartId)

                <div class="row">
                    <div class="span9">
                        <div class="box">

                            <!-- Checkout progress -->
                            <div id="checkout-progress">
                                <ul class="nav nav-tabs">
                                    @*<li class="active">
                                            <a href="#">
                                                <i class="icon-map-marker icon-large"></i>
                                                <span>Billing address</span>
                                            </a>
                                        </li>*@
                                    <li class="active">
                                        <div>
                                            <i class="icon-envelope icon-large"></i>
                                            <span>Shipping address</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div>
                                            <i class="icon-truck icon-large"></i>
                                            <span>Shipping method</span>
                                        </div>
                                    </li>

                                </ul>
                            </div>
                            <!-- End id="checkout-progress" -->
                            <!-- Checkout content -->
                            <div id="checkout-content">
                                <div class="box-header">
                                    <h3>Shipping address</h3>
                                    
                                </div>

                                <div class="box-content">
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label for="first_name" class="control-label">First name</label>
                                                <div class="controls">
                                                    @*<input class="span12" type="text" value="" name="first_name" id="first_name" />*@
                                                    @Html.TextBoxFor(x => x.ShippingDetail.FirstName, new { @id = "FirstName", @validation = "validate", @class = "span12" })
                                                </div>
                                            </div>
                                            <div class="control-group">
                                                <label for="last_name" class="control-label">Last name</label>
                                                <div class="controls">
                                                    @*<input class="span12" type="text" value="" name="last_name" id="last_name" />*@
                                                    @Html.TextBoxFor(x => x.ShippingDetail.LastName, new { @id = "LastName", @validation = "validate", @class = "span12" })
                                                </div>
                                            </div>
                                            <div class="control-group">
                                                <label for="email" class="control-label">Email</label>
                                                <div class="controls">
                                                    @*<input class="span12" type="text" value="" name="email" id="email" />*@
                                                    @Html.TextBoxFor(x => x.ShippingDetail.Email, new { @id = "Email", @validation = "validate", @class = "span12" })                                                    
                                                </div>
                                            </div>
                                            


                                        </div>

                                        <div class="span6">
                                            @*<div class="control-group">
                                                <label for="company" class="control-label">Company</label>
                                                <div class="controls">
                                                    <input class="span12" type="text" value="" name="company" id="company" />
                                                </div>
                                            </div>*@
                                            <div class="control-group">
                                                <label for="street_address" class="control-label">Street address</label>
                                                <div class="controls">
                                                    @*<input class="span12" type="text" value="" name="street_address" id="street_address" />*@

                                                    @Html.TextBoxFor(x => x.ShippingDetail.Adress, new { @id = "Adress", @validation = "validate", @class = "span12" })

                                                </div>
                                            </div>

                                            <div class="row-fluid">
                                                <div class="span6">
                                                    <div class="control-group">
                                                        <label for="city" class="control-label">Town / City</label>
                                                        <div class="controls">
                                                            @*<input class="span12" type="text" value="" name="city" id="city" />*@
                                                            @Html.TextBoxFor(x => x.ShippingDetail.Town, new { @id = "Town", @validation = "validate", @class = "span12" })


                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span6">
                                                    <div class="control-group">
                                                        <label for="zip" class="control-label">Zip / Postcode</label>
                                                        <div class="controls">
                                                            @*<input class="span12" type="text" value="" name="zip" id="zip" />*@
                                                            @Html.TextBoxFor(x => x.ShippingDetail.Zip, new { @id = "Zip", @validation = "validate", @class = "span12" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="control-group">
                                                <label for="phone" class="control-label">Phone</label>
                                                <div class="controls">
                                                    @*<input class="span12" type="text" value="" name="phone" id="phone" />*@
                                                    @Html.TextBoxFor(x => x.ShippingDetail.Phone, new { @id = "Phone", @validation = "validate", @class = "span12" })


                                                </div>
                                            </div>

                                         


                                        </div>
                                    </div>
                                </div>

                                <div class="box-footer">
                                    <div class="pull-left">
                                        <a href="cart.html" class="btn btn-small">
                                            <i class="icon-chevron-left"></i> &nbsp; Back to cart
                                        </a>
                                    </div>

                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-primary" onclick="return ValidateClick();">
                                            Shipping address &nbsp; <i class="icon-chevron-right"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <!-- End id="checkout-content" -->

                        </div>
                    </div>


                </div>
            }
            @*</form>*@
        </div>
    </section>
    <!-- End class="checkout" -->

</section>
<!-- End class="main" -->