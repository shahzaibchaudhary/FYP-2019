
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Mediknock</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="" name="description" />
    <meta content="themes-lab" name="author" />
    <link rel="shortcut icon" href="~/Resources/global/images/favicon.png">
    <link href="~/Resources/global/css/style.css" rel="stylesheet">
    <link href="~/Resources/global/css/ui.css" rel="stylesheet">
    <link href="~/Resources/global/plugins/bootstrap-loading/lada.min.css" rel="stylesheet">
</head>
<body class="account2" data-page="login">
    <!-- BEGIN LOGIN BOX -->
    <div class="container" id="login-block">
        <i class="user-img icons-faces-users-03"></i>
        <div class="account-info">
            <a class="logo">
                <img src="~/Resources/Frontend/img/logo6.png" width="250" height="150" />
            </a>
        </div>
        <div class="account-form">
            <form method="post" class="form-signin" enctype="multipart/form-data" id="FormUser">
                <h3><strong>Sign in</strong> to your account</h3>
                <div class="append-icon">
                    <input type="text" name="Username" id="Username" class="form-control form-white username" placeholder="Username" required="">
                    <i class="icon-user"></i>
                </div>
                <div class="append-icon m-b-20">
                    <input type="password" name="password" class="form-control form-white password" placeholder="Password" required="">
                    <i class="icon-lock"></i>
                </div>
                <input type="submit" id="btnSave" class="btn btn-lg btn-dark btn-rounded ladda-button" data-style="expand-left" value="Sign In" />
                <span class="forgot-password"><a id="password">Forgot password?</a></span>
                @{
                    if (ViewBag.Validation == "False")
                    {
                        <p style="color:red;" id="ErrorMsg"> Invalid Email or Password</p>
                    }
                    else if (ViewBag.Validation == "Deactive")
                    {
                        <p style="color:red;" id="ErrorMsg"> You are not Authorized to Access</p>
                    }
                    else
                    {

                    }
                }
            </form>
            @using (@Html.BeginForm("ForgotPassword", "Admin", FormMethod.Post, new { @class = "form-password" }))
            {
                <h3><strong>Reset</strong> your password</h3>
                <div class="append-icon m-b-20">

                    <input type="email" name="email" class="form-control" placeholder="Enter Email" required="required">
                    <span style="color:red;">@TempData["Message"]</span>
                    <i class="icon-lock"></i>
                </div>
                <input type="submit" value="Send Password Reset Link" class="btn btn-lg btn-danger btn-block ladda-button" data-style="expand-left" />
                <div class="clearfix m-t-60">
                    <p class="pull-left m-t-20 m-b-0"><a id="login" href="#">Have an account? Sign In</a></p>
                </div>
            }

        </div>
    </div>
    <!-- END LOCKSCREEN BOX -->

    <script src="~/Resources/global/plugins/jquery/jquery-1.11.1.min.js"></script>
    <script src="~/Resources/global/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Resources/global/plugins/backstretch/backstretch.min.js"></script>
    <script src="~/Resources/global/js/pages/login-v2.js"></script>
</body>
</html>