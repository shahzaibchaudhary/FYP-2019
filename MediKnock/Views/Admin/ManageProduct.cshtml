@model MediKnock.Models.Admin.ProductModel

@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

@using MediKnock.Models.Admin



<div class="col-xs-9">
    <h2>List<strong> Products</strong></h2>
</div>

<div class="col-xs-3">
    <input type="button" value="Add Product" style="float:right;" class="btn btn-dark" data-toggle="modal" data-target="#modal-select" onclick="location.href = '/Admin/AddProduct'">
</div>
@*<input type="text" value="@TransectionID" id="hdnTransectionID" style="display:none" />*@
@{
    if (Model.lstProduct != null && Model.lstProduct.Count > 0)
    {
        <body>
            <div class="row">

                @*<a onclick="ShowAllProducts()" id="ShowAllProductsID" style="cursor:pointer;" class="btn btn-dark">Clik Here to Display All Products</a>*@

                
                                <div class="col-lg-12 portlets">
                                    <div class="panel">
                                        <div class="panel-content pagination2 table-responsive">
                                            <table class="table table-hover table-dynamic">
                                                <thead>
                                                    <tr>
                                                        <th>Product Name</th>
                                                        <th>Heading</th>
                                                        <th>Short Description</th>
                                                        <th>Long Description</th>
                                                        <th>Price</th>
                                                        <th>Quantity</th>                                                  
                                                        <th>Actions</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                    if (Model.lstProduct != null)
                    {
                        foreach (var item in Model.lstProduct)
                        {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Heading)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ShortDescription)

                                                            
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.LongDescription)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Price)                                                           
                                                        </td>
                                                        
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Quantity)
                                                        </td>
                                                        <td>
                                                            <a href='~/Admin/AddProduct?ID=@item.ID'>Edit</a>-
                                                            <a href='~/Admin/DeleteProduct?ID=@item.ID' onclick="return confirm('Are you sure ?');">Delete</a>
                                                        </td>
                                                    </tr>
                        }
                    }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                           

            </div>
        </body>
    }
    else
    {
        <h2 style="color:green;float:left; margin:15px;">No Stock Available </h2>
    }
}