@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>AirTicket</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="" name="description" />
    <meta content="themes-lab" name="author" />
    <link rel="shortcut icon" href="~/Resources/global/images/favicon.png">
    <link href="~/Resources/global/css/style.css" rel="stylesheet">
    <link href="~/Resources/global/css/ui.css" rel="stylesheet">
    <link href="~/Resources/global/plugins/bootstrap-loading/lada.min.css" rel="stylesheet">


    <script src="~/Scripts/Main/jquery/jquery-1.11.3.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            //alert("123");
            //alert($("div.append-icon").children("input"));
            $('#confirmpassid').on('keyup', function () {

                if ($('#newpassid').val() == $('#confirmpassid').val()) {
                    $('#message').html('Password Matched').css('color', 'green');
                    //var message = document.getElementById("message");
                    //message.setAttribute("class", "form-control");
                } else
                    $('#message').html('Password Not Matching').css('color', 'red');
            });
        });
    </script>


</head>
<body class="account2" data-page="login">
    <!-- BEGIN LOGIN BOX -->
    <div class="container" id="login-block">
        <i class="user-img icons-faces-users-03"></i>
        <div class="account-info">
            <a class="logo"></a>
        </div>
        <div class="account-form">
            <form method="post" class="form-signin" enctype="multipart/form-data" id="FormUser">
                <h3><strong> Reset </strong> Password</h3>
                <div class="append-icon">
                    @*<input type="text" name="Username" id="Username" class="form-control form-white username" placeholder="Username" required="">*@
                    <label class="form-label">New Password</label>
                    <input type="password" class="form-control form-white username" placeholder="New Password" name="newpass" required id="newpassid" />

                    <i class="icon-user"></i>
                </div>
                <div class="append-icon m-b-20">
                    @*<input type="password" name="password" class="form-control form-white password" placeholder="Password" required="">*@

                    <label class="form-label">Confirm New Password</label>
                    <input type="password" class="form-control form-white password" placeholder="Confirm New Password" name="confrim" required id="confirmpassid" />
                    <span id='message'></span>
                    <i class="icon-lock"></i>
                </div>
                @*<input type="submit" id="btnSave" class="btn btn-lg btn-dark btn-rounded ladda-button" data-style="expand-left" value="Sign In" />*@
                <input type="submit" id="btnSave" class="btn btn-lg btn-dark btn-rounded ladda-button" value="Update Password" name="Save" />

            </form>
        </div>
    </div>
    <!-- END LOCKSCREEN BOX -->

    <script src="~/Resources/global/plugins/jquery/jquery-1.11.1.min.js"></script>
    <script src="~/Resources/global/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Resources/global/plugins/backstretch/backstretch.min.js"></script>
    <script src="~/Resources/global/js/pages/login-v2.js"></script>
</body>
</html>



