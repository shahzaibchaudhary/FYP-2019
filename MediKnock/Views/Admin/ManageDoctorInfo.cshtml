@model MediKnock.Models.Admin.DoctorModel

@{
    ViewBag.Title = "ManageDoctorInfo";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}


@using MediKnock.Models.Admin



<div class="col-xs-9">
    <h2>List<strong> Doctor Info</strong></h2>
</div>

<div class="col-xs-3">
    <input type="button" value="Add Doctor Info" style="float:right;" class="btn btn-dark" data-toggle="modal" data-target="#modal-select" onclick="location.href = '/Admin/Adddoctorinfo'">
</div>
@*<input type="text" value="@TransectionID" id="hdnTransectionID" style="display:none" />*@
@{
    if (Model.lstDoctorInfo != null && Model.lstDoctorInfo.Count > 0)
    {
        <body>
            <div class="row">

                @*<a onclick="ShowAllProducts()" id="ShowAllProductsID" style="cursor:pointer;" class="btn btn-dark">Clik Here to Display All Products</a>*@


                <div class="col-lg-12 portlets">
                    <div class="panel">
                        <div class="panel-content pagination2 table-responsive">
                            <table class="table table-hover table-dynamic">
                                <thead>
                                    <tr>
                                        <th> Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Adress</th>
                                        <th>Hospital</th>
                                        <th>Specialization</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
        if (Model.lstDoctorInfo != null)
        {
            foreach (var item in Model.lstDoctorInfo)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)


                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hospital)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Specialization)
                    </td>
                    <td>
                        <a href='~/Admin/AddDoctorInfo?ID=@item.Id'>Edit</a>-
                        <a href='~/Admin/DeleteDoctorInfo?ID=@item.Id' onclick="return confirm('Are you sure ?');">Delete</a>
                    </td>
                </tr>
            }
        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </body>
    }
    else
    {
        <h2 style="color:green;float:left; margin:15px;">No Stock Available </h2>
    }
}