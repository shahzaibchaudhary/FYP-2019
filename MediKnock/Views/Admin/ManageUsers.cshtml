@model MediKnock.Models.Admin.AdminUserModel

@{
    ViewBag.Title = "ManageUsers";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}
<div class="col-xs-9">
    <h2>Manage<strong> User</strong></h2>
</div>
<div class="col-xs-3">
    <input type="button" value="Register New Users" style="float:right;" class="btn btn-dark" data-toggle="modal" data-target="#modal-select" onclick="location.href = '/Admin/AddUser'">
</div>

<body>
    @{

        if (Model != null && Model.lstUser != null && Model.lstUser.Count > 0)
        {
            <div class="row">
                <div class="col-lg-12 portlets">
                    <div class="panel">
                        <div class="panel-content pagination2 table-responsive">
                            <table class="table table-hover table-dynamic">
                                <thead>
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Username</th>
                                        <th>Contact No</th>
                                        <th>Email</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
            if (Model != null)
            {
                foreach (var item in Model.lstUser)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        @{
                    if (item.UserName == "Admin")
                    {
                        <td>
                            <a href='~/Admin/AddUser?ID=@item.ID'>Edit</a>-
                            <a style="color: #C0C9D1;">Delete</a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a href='~/Admin/AddUser?ID=@item.ID'>Edit</a>-
                            <a href='~/Admin/Delete?ID=@item.ID' onclick="return confirm('Are you sure ?');">Delete</a>
                        </td> }
                        }

                    </tr>
                }
            }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</body>