@model MediKnock.Models.Admin.AdmincategoryModel 

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

<h2>AddCategory</h2>



<div class="col-xs-9">
    <h2>Add<strong> Category</strong></h2>
</div>
<div class="col-xs-3">
    <input type="button" value="Manage Products" style="float:right;" class="btn btn-dark" data-toggle="modal" data-target="#modal-select" onclick="location.href = '/Admin/ManageProduct'">
</div>
<form method="post" enctype="multipart/form-data" id="FormUser">

    <div class="row">
        <div class="col-lg-12 portlets">
            <div class="panel">
                <div class="panel-content">
                    <h2> ADD/UPDATE Category</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Category Name </label>
                                @Html.TextBoxFor(x => x.CategoryDetail.ID, new { @Style = "display: none;" })
                                @Html.TextBoxFor(x => x.CategoryDetail.Name, new { @placeholder = "Category Name", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                       
                        @*<div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Short Description</label>
                                @Html.TextBoxFor(x => x.CategoryDetail.ShortDescription, new { @placeholder = "Short Description", @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Long Description</label>
                                @Html.TextBoxFor(x => x.CategoryDetail.LongDescription, new { @placeholder = "Long Description", @class = "form-control" })
                            </div>
                        </div>*@

                    </div>
                    <div>
                        @{
                            string Text = "Save";
                            if (Model.add == "update")
                            {
                                Text = "Update";
                            }
                        }

                        <input type="submit" id="btnSave" class=" btn btn-dark" value="@Text" name="Save" />

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>