<head>
    <meta charset="UTF-8">

    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="La Boutique HTML v1.0" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>  MediKnock </title>

    <link href="~/Custom/css/ProjectStyle.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="~/Resources/Frontend/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Resources/Frontend/css/bootstrap-responsive.css" />
    <link rel="stylesheet" type="text/css" href="~/Resources/Frontend/css/fonts/font-awesome.css" />
    <link rel="stylesheet" type="text/css" href="~/Resources/Frontend/css/flexslider.css" />
    <link rel="stylesheet" type="text/css" href="~/Resources/Frontend/js/tfingi-megamenu/tfingi-megamenu-frontend.css" />


    <!-- Comment following two lines to use LESS -->
    <link rel="stylesheet" type="text/css" href="~/Resources/Frontend/css/color-schemes/core.css" />
    <link rel="stylesheet" type="text/css" href="~/Resources/Frontend/css/color-schemes/turquoise.css" id="color_scheme" />


    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link href="http://fonts.googleapis.com/css?family=Lato:300,300italic,400,400italic,700,700italic|Shadows+Into+Light" rel="stylesheet" type="text/css">

</head>
<body>


    @using MediKnock.Models.Client
    @using MediKnock.Models
    @using MediKnock.CommonClasses;


    <div class="wrapper">

        <!-- Header -->
        <div class="header">

            <!-- Logo & Search bar -->
            <div class="bottom">
                <div class="container">
                    <div class="row">
                        <div class="span6">
                            <div class="logo">
                                <a href="/home/index" title="&larr; Back home">
                                    <img src="~/Resources/Frontend/img/logo6.png" alt="Mediknock" />
                                </a>
                            </div>
                        </div>

                        <div class="span2">
                            <ul class="inline pull-right" style="margin-top: 30px;">


                                <li>

                                    @{
                                        UserProfile User = new UserProfile();
                                        int UserId = GenericFuntions.GetCookieUserLogin();
                                        if (UserId > 0)
                                        {
                                            User = new UserProfileDAL().GetUserProfileByID(UserId);
                                        }

                                        if (User != null && User.FirstName != null)
                                        {
                                            <a href="~/UserProfile/RegisterNLogin" title="Login / Register">@User.FirstName @User.LastName</a>
                                        }
                                        else
                                        {
                                            <a href="~/UserProfile/RegisterNLogin" title="Login / Register">Login / Register</a>
                                        }

                                    }


                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <a href="~/UserProfile/Logout" title="Login / Register">Logout</a>
                                </li>
                                <li>

                                </li>
                            </ul>
                        </div>



                        <div class="span4">
                            <div class="row-fluid">
                                <div class="span10">

                                    <!-- Search -->
                                    <div class="search">
                                        <div class="qs_s">

                                            <form method="post" action="search.html">
                                                <input type="text" name="query" id="query" placeholder="Search&hellip;" autocomplete="off" value="">
                                            </form>

                                            <!-- Autocomplete results -->
                                            <div id="autocomplete-results" style="display: none;">

                                            </div>
                                            <!-- End id="autocomplete-results" -->

                                        </div>
                                    </div>
                                    <!-- End class="search"-->

                                </div>

                                <div class="span2">

                                    <!-- Mini cart -->
                                    <div class="mini-cart">

                                        @{
                                            //int UserId = 0;
                                            //UserId = GenericFuntions.GetCookieUserLogin();
                                            if (UserId > 0)
                                            {
                                                ShopingCart Cart = new ShopingCart();
                                                Cart = new CartDAL().GetInProgressCartbyUserId(UserId);

                                                if (Cart != null)
                                                {
                                                    <a href="/UserProfile/Profile?CartId=@Cart.Id" title="Go to cart &rarr;">
                                                        <span> @ViewBag.CartAmount </span>
                                                    </a>
                                                }

                                            }
                                            else
                                            {
                                                <a href="/UserProfile/Profile?CartId=0" title="Go to cart &rarr;">
                                                    <span> @ViewBag.CartAmount </span>
                                                </a>
                                            }


                                        }



                                    </div>
                                    <!-- End class="mini-cart" -->

                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
            <!-- End class="bottom" -->

        </div>


        <!-- End class="header" -->
        <!-- Navigation -->
        @{Html.RenderPartial("Header", new HeaderBE());}



        <!-- End class="navigation" -->
        <!-- Content section -->
        <section class="main">


            @RenderBody()




        </section>
        <!-- End class="main" -->
        
    </div>
    <!-- End id="footer" -->
    <!-- Credits bar -->
    <div class="credits">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <p>&copy; 2019 <a href="#" title="Mediknock">Mediknock</a> &middot; <a href="#" title="Terms &amp; Conditions">Terms &amp; Conditions</a> &middot; <a href="#" title="Privacy policy">Privacy policy</a> &middot; All Rights Reserved. </p>
                </div>
                <div class="span4 text-right hidden-phone">
                    <p><a href="#" title="Mediknock">Mediknock</a></p>
                </div>
            </div>
        </div>
    </div>
    <!-- End class="credits" -->
